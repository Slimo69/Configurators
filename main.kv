#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    ProjectScreen:
	
<MainScreen>:
    name: 'main'

    BoxLayout:
        orientation: "vertical"
        spacing:10
        padding:10

        Button:
            on_press: app.root.current = 'project'
            text: 'Project Specification'
        Button:
            text: 'Project Scope'
            
<ProjectScreen>:
    name: 'project'

    GridLayout:
        cols: 2

        Label:
            text: "Project Name"

        TextInput:
            id: project_name
            multiline: False
            text: ""
            hint_text: "Please specify project name"

        Button:
            on_release: app.root.current = 'main'
            text: 'Back'

        Button:
            text: 'Process'
            on_press: root.printtxt(project_name.text)